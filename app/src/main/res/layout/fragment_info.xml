<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@drawable/background_1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="56dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"

        android:id="@+id/info_back"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_arrow_back"
        android:padding="16dp"
        android:layout_height="56dp"/>

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/info_back"
        app:layout_constraintBottom_toBottomOf="@id/info_back"
        app:layout_constraintStart_toEndOf="@id/info_back"
        android:text="@string/rules"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:shadowRadius="2"
        android:shadowDy="1"
        android:id="@+id/info_header"
        android:shadowColor="#000"
        android:fontFamily="sans-serif-medium"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_header"
        android:layout_marginStart="18dp"
        android:layout_marginTop="32dp"
        android:text="You should know:"
        android:textSize="22sp"
        android:textColor="@color/colorWhite"
        android:shadowRadius="2"
        android:shadowDy="1"
        android:shadowColor="#000"
        android:id="@+id/info_header_desc"
        android:fontFamily="sans-serif-medium"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_header_desc"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text=" • Screenaway can't be canceled."
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:shadowRadius="2"
            android:shadowDy="1"
            android:shadowColor="#000"
            android:fontFamily="sans-serif"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text=" • All apps unavailable except for the camera."
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:shadowRadius="2"
            android:layout_marginTop="16dp"
            android:shadowDy="1"
            android:shadowColor="#000"
            android:fontFamily="sans-serif"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text=" • Incoming notification will be muted. \n   (you can disable auto-muting in settings)"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:shadowRadius="2"
            android:shadowDy="1"
            android:shadowColor="#000"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text=" • You may still receive phone calls and make emergency calls."
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:shadowRadius="2"
            android:layout_marginTop="16dp"
            android:shadowDy="1"
            android:shadowColor="#000"
            android:fontFamily="sans-serif"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:layout_width="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="28dp"
        android:textAllCaps="true"
        android:textColor="#333"
        android:id="@+id/info_confirm_button"
        android:gravity="center"
        android:text="@string/confirm"
        android:textSize="12sp"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/main_button"
        android:layout_height="32dp"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>