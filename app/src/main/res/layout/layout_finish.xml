<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:background="@drawable/dc97b6030108f48a08a79e92e54f32fc"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:alpha="0.9"
        android:layout_height="match_parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".3"
        android:id="@+id/finish_guideline"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/finish_button_close"
        android:padding="18dp"
        android:layout_marginTop="24dp"
        android:tint="#333"
        android:alpha=".75"
        android:src="@drawable/ic_close"
        android:layout_height="56dp"/>

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Congratulations!"
        android:textColor="#3DE76F"
        android:textSize="32sp"
        android:shadowRadius="2"
        android:id="@+id/finish_text_congratulations"
        android:shadowDy="1"
        android:shadowColor="#000"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="@id/finish_guideline"
        app:layout_constraintBottom_toBottomOf="@id/finish_guideline"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="@id/finish_text_congratulations"
        app:layout_constraintEnd_toEndOf="@id/finish_text_congratulations"
        app:layout_constraintTop_toBottomOf="@id/finish_text_congratulations"
        android:layout_marginTop="32dp"
        android:textColor="#333"
        android:id="@+id/finish_desc"
        android:fontFamily="sans-serif-light"
        android:text="You did it! 30 minutes for really important tasks!"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/finish_button_again"
        android:text="Again"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-medium"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/finish_button_exit"
        android:text="Exit"
        app:layout_constraintEnd_toStartOf="@id/finish_button_again"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-light"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>