<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <View
            android:layout_width="5dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/circle"
            android:backgroundTint="@color/grey_80"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/item_desc_view"
            android:alpha=".95"
            android:layout_height="5dp"/>

        <TextView
            android:layout_width="wrap_content"

            android:padding="12dp"
            android:layout_marginStart="3dp"
            app:layout_constraintStart_toEndOf="@id/item_desc_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/item_desc_text"
            tools:text="April 2020"
            android:textColor="@color/grey_80"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_height="wrap_content"/>

    <View
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="@id/item_desc_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"
        android:background="@color/blue_grey_500"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0.5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>